<h1>Wines!</h1>
<div class="container"  role="main">
  <% @wines.each do |wine| %>
  <h3><%= link_to wine_name(wine), wine_path(wine) %> </h3>
  <% end %>
</div>
<div>
<h3> <%= link_to "Add a new wine", new_wine_path %> </h3>
</div>
<div class="sort-form">
  <%= form_tag '/filter' do %>
      <label>Sort by:</label>
      <%= select_tag "filter", "<option>Region</option><option>Category</option><option>Grape</option><option>Year</option>".html_safe, include_blank: true %>
      <%= submit_tag "Submit" %>
    <% end %>

</div>
