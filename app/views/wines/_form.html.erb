<% if @wine.errors.any? %>
  <div id="error_explanation">
    <h2>There were some errors:</h2>
    <ul>
      <% @wine.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="form-horizontal">
  <%= form_for @wine do |w| %>

    <div class="form-group">  
      <%= w.label "Label: ", class: "col-md-4 control-label" %>
      <div class="col-md-4">
        <%= w.text_field :label, class: "form-control" %>
      </div>
     </div> 

    <div class="form-group">
      <%= w.label "Category: ", class: "col-md-4 control-label" %>
      <div class="col-md-4">
        <%= w.select :category, [["Red"], ["Red Blend"], ["White"], ["White Blend"], ["Sparkling"], ["RosÃ¨"]], include_blank: true, class: "form-control" %>
      </div>
    </div> 

    <div class="form-group">  
      <%= w.label "Grape: ", class: "col-md-4 control-label" %>
      <div class="col-md-4">
        <%= w.text_field :grape, class: "form-control" %>
       </div>
     </div>  

    <div class="form-group">  
      <%= w.label "Year: ", class: "col-md-4 control-label" %>
      <div class="col-md-4">
        <%= w.text_field :year, class: "form-control" %>
      </div>
     </div>   

    <div class="form-group">  
      <%= w.label "Region:", class: "col-md-4 control-label" %>
      <div class="col-md-4">
        <%= w.text_field :region, class: "form-control" %>
       </div>
     </div> 

     <div> 
      <%= w.submit %>
    </div>
  <% end %>
